#/bin/sh

# Reference
# https://misc.flogisoft.com/bash/tip_colors_and_formatting

# 8/16 color

# foreground
redColor=$'\e[1;31m'
greenColor=$'\e[1;32m'
blueColor=$'\e[1;34m'
magentaColor=$'\e[1;35m'
lightYellowColor=$'\e[1;93m'
lightBlueColor=$'\e[1;94m'

# background
redBGColor=$'\e[1;41m'
greenBGColor=$'\e[1;42m'
blueBGColor=$'\e[1;44m'
magentaBGColor=$'\e[1;45m'
lightYellowBGColor=$'\e[1;103m'
lightBlueBGColor=$'\e[1;104m'

endColor=$'\e[0m'
